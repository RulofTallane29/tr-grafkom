        glVertex3f(-60.0 + 80, -15.0+ 10, -24.9 +250);
        glVertex3f(-33.0 + 70, -15.0+ 10, -24.9 +250);
        glEnd();


	//toilet portable 1
        //belakang
        glBegin(GL_QUADS);
        glColor3f(255/255.0f,144/255.0f,82/255.0f);
        glVertex3f(-33.0 + 65, -20.0+ 10, -24.9 + +325);
        glVertex3f(-33.0 + 65, -13.0+ 30, -24.9 +325);
        glVertex3f(-60.0 + 80, -13.0+ 30, -24.9 +325);
        glVertex3f(-60.0+ 80, -20.0+ 10, -24.9 +325);
        glEnd();
        //depan
        glBegin(GL_QUADS);
