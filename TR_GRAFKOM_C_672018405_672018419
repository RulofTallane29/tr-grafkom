	glVertex3f(60, 3, 125);
	glVertex3f(80, 3, 125);
	glVertex3f(80, 7, 125);
	glVertex3f(60, 7, 125);

	//kaki kiri
	glColor4f(91 / 255.0f, 86 / 255.0f, 76 / 255.0f, 100 / 255.0f);
	glVertex3f(40, -10, 55);
	glVertex3f(40, -10, 75);
	glVertex3f(100, -10, 75);
	glVertex3f(100, -10, 55);

	glVertex3f(40, 10, 55);
	glVertex3f(40, 10, 75);
	glVertex3f(100, 10, 75);
	glVertex3f(100, 10, 55);

	glVertex3f(40, -10, 55);
	glVertex3f(40, -10, 75);
	glVertex3f(40, 10, 75);
	glVertex3f(40, 10, 55);

	glVertex3f(100, -10, 55);
	glVertex3f(100, -10, 75);
	glVertex3f(100, 10, 75);
	glVertex3f(100, 10, 55);

	glVertex3f(40, -10, 55);
	glVertex3f(100, -10, 55);
	glVertex3f(100, 10, 55);
	glVertex3f(40, 10, 55);

	glVertex3f(40, -10, 75);
	glVertex3f(100, -10, 75);
	glVertex3f(100, 10, 75);
	glVertex3f(40, 10, 75);
	glEnd();
	//kaki kanan
	double ngon = (double)vertex;
	//pinggir
	glBegin(GL_POLYGON);
	glColor3f(1.0, 1.0, 1.0);
	for (int i = 0; i < vertex; i++) {
		double x = (r * cos(2 * M_PI * i / ngon)) + 30;
		double y = (r * sin(2 * M_PI * i / ngon)) + 10;
		if (x < 31) {
			glVertex3f(x, y, 55);
		}
	}glVertex3f(30, 5, 55);
	glEnd();
	glBegin(GL_POLYGON);
	for (int i = 0; i < vertex; i++) {
		double x = (r * cos(2 * M_PI * i / ngon)) + 30;
		double y = (r * sin(2 * M_PI * i / ngon) )+ 10;
		if (x < 31) {
			glVertex3f(x, y, 75);
		}
	}glVertex3f(30, 5, 75);
	glEnd();
	//tengah
	glBegin(GL_POLYGON);
	for (int i = 0; i < vertex; i++) {
		double x = (r * cos(2 * M_PI * i / ngon)) + 30;
		double y = (r * sin(2 * M_PI * i / ngon)) + 10;
		if (x <= 30) {
			if (y > 4) {
				glVertex3f(x, y, 55);
			}
		}
	}glVertex3f(25, 5, 75);
	glEnd();
	glBegin(GL_POLYGON);
	for (int i = 0; i < vertex; i++) {
		double x = (r * cos(2 * M_PI * i / ngon)) + 30;
		double y = (r * sin(2 * M_PI * i / ngon)) + 10;
		if (x <= 30) {
			if (y < 6) {
				glVertex3f(x, y, 55);
			}
		}
	}glVertex3f(25, 5, 75);
	glEnd();
	glBegin(GL_POLYGON);
	for (int i = 0; i < vertex; i++) {
		double x = (r * cos(2 * M_PI * i / ngon)) + 30;
		double y = (r * sin(2 * M_PI * i / ngon)) + 10;
		if (x < 31) {
			if (y > 4) {
				glVertex3f(x, y, 75);
			}
		}
	}glVertex3f(30, 10, 55);
	glEnd();
	glBegin(GL_POLYGON);
	for (int i = 0; i < vertex; i++) {
		double x = (r * cos(2 * M_PI * i / ngon)) + 30;
		double y = (r * sin(2 * M_PI * i / ngon)) + 10;
		if (x < 31) {
			if (y < 6) {
				glVertex3f(x, y, 75);
			}
		}
	}glVertex3f(30, 0, 55);
	glEnd();

	//pinggir
	glBegin(GL_POLYGON);
	glColor3f(1.0, 1.0, 1.0);
	for (int i = 0; i < vertex; i++) {
		double x = (r * cos(2 * M_PI * i / ngon)) + 30;
		double y = (r * sin(2 * M_PI * i / ngon)) + 10;
		if (x < 31) {
			glVertex3f(x, y, 55);
		}
	}glVertex3f(30, 5, 55);
	glEnd();
	glBegin(GL_POLYGON);
	for (int i = 0; i < vertex; i++) {
		double x = (r * cos(2 * M_PI * i / ngon)) + 30;
		double y = (r * sin(2 * M_PI * i / ngon)) + 10;
		if (x < 31) {
			glVertex3f(x, y, 75);
		}
	}glVertex3f(30, 5, 75);
	glEnd();



	

	

	glBegin(GL_POLYGON);
	glColor4f(91 / 255.0f, 86 / 255.0f, 76 / 255.0f, 100 / 255.0f);
	glVertex3f(40, -10, 125);
	glVertex3f(40, -10, 145);
	glVertex3f(100, -10, 145);
	glVertex3f(100, -10, 125);

	glVertex3f(40, 10, 125);
	glVertex3f(40, 10, 145);
	glVertex3f(100, 10, 145);
	glVertex3f(100, 10, 125);

	glVertex3f(40, -10, 125);
	glVertex3f(40, -10, 145);
	glVertex3f(40, 10, 145);
	glVertex3f(40, 10, 125);

	glVertex3f(100, -10, 125);
	glVertex3f(100, -10, 145);
	glVertex3f(100, 10, 145);
	glVertex3f(100, 10, 125);

