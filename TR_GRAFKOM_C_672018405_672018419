void ujung_belakang(double r, int vertex){
	double ngon = (double)vertex;
	//samping kanan
	glBegin(GL_POLYGON);
	glColor3f(0.6, 0.4, 0.5);
		for (int i = 0; i < vertex; i++) {
			double z = r * cos(2 * M_PI * i / ngon)+ 130;
			double y = ((r + (i * 0.00001)) * sin(2 * M_PI * i / ngon)) + 50;
			if (y >=50.0) {
				if (z>=130){
					glVertex3f(60,y,z);
				}
			}
		}glVertex3f(60,50,130);
	glEnd();
	glBegin(GL_POLYGON);
	glColor3f(0.5, 0.5, 0.5);
		for (int i = 0; i < vertex; i++) {
			double z = r * cos(2 * M_PI * i / ngon)+ 130;
			double y = ((r + (i * 0.00001)) * sin(2 * M_PI * i / ngon)) + 50;
			if (y >=50.0) {
				if (z>=130){
					glVertex3f(60,y,z);
				}
			}
		}glVertex3f(20,50,140);
	glEnd();
	glBegin(GL_POLYGON);
	glColor3f(0.7, 0.5, 0.6);
		for (int i = 0; i < vertex; i++) {
			double z = r * cos(2 * M_PI * i / ngon)+ 130;
			double y = ((r + (i * 0.00001)) * sin(2 * M_PI * i / ngon)) + 50;
			if (y >=50.0) {
				if (z>=130){
					glVertex3f(20,y,z);
				}
			}
		}glVertex3f(20,50,130);
	glEnd();
	glBegin(GL_POLYGON);
	glColor3f(0.5, 0.5, 0.5);
		for (int i = 0; i < vertex; i++) {
			double z = r * cos(2 * M_PI * i / ngon)+ 130;
			double y = ((r + (i * 0.00001)) * sin(2 * M_PI * i / ngon)) + 50;
			if (y >=50.0) {
				if (z>=130){
					glVertex3f(20,y,z);
				}
			}
		}glVertex3f(60,60,130);
	glEnd();

	//samping kiri
	glBegin(GL_POLYGON);
	glColor3f(0.6, 0.4, 0.5);
		for (int i = 0; i < vertex; i++) {
			double z = r * cos(2 * M_PI * i / ngon)+ 70;
			double y = ((r + (i * 0.00001)) * sin(2 * M_PI * i / ngon)) + 50;
			if (y >=50.0) {
				if (z<71){
					glVertex3f(60,y,z);
				}
			}
		}glVertex3f(60,50,70);
	glEnd();
	glBegin(GL_POLYGON);
	glColor3f(0.5, 0.5, 0.5);
		for (int i = 0; i < vertex; i++) {
			double z = r * cos(2 * M_PI * i / ngon)+ 70;
			double y = ((r + (i * 0.00001)) * sin(2 * M_PI * i / ngon)) + 50;
			if (y >=50.0) {
				if (z<71){
					glVertex3f(60,y,z);
				}
			}
		}glVertex3f(20,50,60);
	glEnd();
	glBegin(GL_POLYGON);
	glColor3f(0.6, 0.4, 0.5);
		for (int i = 0; i < vertex; i++) {
			double z = r * cos(2 * M_PI * i / ngon)+ 70;
			double y = ((r + (i * 0.00001)) * sin(2 * M_PI * i / ngon)) + 50;
			if (y >=50.0) {
				if (z<71){
					glVertex3f(20,y,z);
				}
			}
		}glVertex3f(20,50,70);
	glEnd();
	glBegin(GL_POLYGON);
	glColor3f(0.5, 0.5, 0.5);
		for (int i = 0; i < vertex; i++) {
			double z = r * cos(2 * M_PI * i / ngon)+ 70;
			double y = ((r + (i * 0.00001)) * sin(2 * M_PI * i / ngon)) + 50;
			if (y >=50.0) {
				if (z<71){
					glVertex3f(20,y,z);
				}
			}
		}glVertex3f(60,60,70);
	glEnd();
}


